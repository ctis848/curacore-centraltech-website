{
  "compilerOptions": {
    "target": "es2020",                      // Updated from es5 → better modern output
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",           // Important for Next.js 13+ / Vite-like resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",                       // Next.js handles JSX → preserve is correct
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Path aliases – perfect for @/components, @/lib, etc.
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"                    // Helps with Next.js generated types
  ],

  "exclude": [
    "node_modules",
    ".next",                                 // Build output
    "netlify/functions",                     // Serverless functions (Netlify-specific)
    "public"                                 // Static assets
  ]
}